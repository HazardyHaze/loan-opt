generator client {
  provider = "prisma-client"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// =====================
// Frontend Models
// =====================

model Admin {
  admin_id         Int    @id @default(autoincrement())
  permission_level String
  email            String @unique
  phone_no         String @unique
  password         String

  @@map("admin")
}

model Student {
  student_id     Int    @id
  name           String
  email          String @unique
  password       String
  phone_no       String @unique
  gpa            Float
  family_income  Int
  academic_level String
  institution    String
  major          String

  @@map("student")
}

// =====================
// Backend / Telegram Scraper Models
// =====================

model Post {
  id                Int       @id @default(autoincrement())
  telegram_id       String    @unique
  channel_username  String?
  message_text      String
  media_urls        String
  link              String?
  amount 	          Float?
  eligibility       String?
  course            String?
  opening_date      DateTime?
  deadline          DateTime?
  date              DateTime?

  @@map("posts")
}

model Keyword {
  id       String  @id @default(uuid())
  keyword  String
  category String
  priority Int     @default(0)
  is_active Boolean @default(true)

  @@map("keywords")
}
